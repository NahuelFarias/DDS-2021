{{#partial "content"}}
    <!-- Single Post Start-->
    <div class="single">
        <div class="container top">
            <div class="row">
                <h3> {{publicacion.mascota.nombre}}</h3>
                <p>Fecha: {{publicacion.fecha}}</p>
                <div class="col-lg-6">
                    <div class="single-content wow fadeInUp">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                {{#each publicacion.mascota.fotos}}
                                    {{#if @index}}
                                        <div class="carousel-item">
                                        <img src="../{{uRLfoto}}" alt="Slide Number {{@index}}">
                                        </div>
                                    {{else}}
                                        <div class="carousel-item active">
                                            <img src="../{{uRLfoto}}" alt="Slide Number {{@index}}">
                                        </div>
                                    {{/if}}

                                {{/each}}
                              <!--  <div class="carousel-item active">
                                    <img src="../{{publicacion.mascota.fotos.[0].uRLfoto}}" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{publicacion.mascota.fotos.[0].uRLfoto}}" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{publicacion.mascota.fotos.[0].uRLfoto}}" alt="Third slide">
                                </div>-->
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Anterior</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Siguiente</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="sidebar">
                        <div class="sidebar-widget wow fadeInUp">
                            <h2 class="wavyy">En adopción</h2>
                            <div class="text-widget">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Edad:</h6>
                                    </div>
                                    <div class="col-md-3">
                                        <h6>{{publicacion.mascota.edad}} meses</h6>
                                    </div>
                                </div>
                                {{#each publicacion.cuestionario.respuestas}}
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6>{{pregunta.pregunta}}</h6>
                                        </div>
                                        <div class="col-md-3">
                                            <h6>{{respuesta}}</h6>
                                        </div>
                                    </div>
                                {{/each}}
                                <p>
                                <h6>Más info:</h6>
                                {{publicacion.mascota.descripcion}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class=" text-center form-check">
            <input type="checkbox" class="form-check-input" id="save-info">
            <label class="form-check-label" for="save-info">
                Acepto que se envíen mis datos de contacto al responsable
            </label>
        </div>
    </div>
    <!--TODO: Hacer que solo se pueda seleccionar el boton de QUIERO ADOPTARLO si aceptaste que se envie tu contacto -->
    {{#if usuario}}
        <div class="py-3 container text-center">
            <a class="btn-grande" href="adopcion_publicacion_log_ok.html">QUIERO ADOPTARLO</a>
        </div>
    {{else}}
        <div class="py-3 container text-center">
            <a class="btn-grande" href="#datos">QUIERO ADOPTARLO</a>
        </div>

        <div class="container top" id="datos">
            <div class="py-5 text-center" id="form">
                <br> <br>
                <h2>Datos de contacto <i class="fas fa-paw"></i></h2>
                <p class="lead">Enviaremos tu contacto al responsable de la mascota para que se contacte con vos.
                </p>
            </div>

            <!--Hacer que redireccione a la pagina, borrar recordatorio maniana-->
            <form class="text-center text-md-left" action="/en_adopcion/2" method="post" novalidate>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label fw-bold">Tu nombre : </label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" id="nombre" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tel" class="col-sm-2 col-form-label fw-bold">Teléfono : </label>
                    <div class="col-sm-2">
                        <input type="telefono" class="form-control" id="telefono" placeholder="+541123456789" required>
                    </div>
                <label for="email" class="col-sm-2 col-form-label fw-bold">Correo electrónico : </label>
                <div class="col-sm-4">
                    <input type="email" class="form-control" name="email" placeholder="Correo electrónico" id="email" required>
                </div>
                </div>

               <hr class="my-4">
                <div class="col-sm-12 text-center py-5">
                <!--<p>-->
                <button class="btn-grande text-uppercase fw-bold mb-2" type="submit">Quiero adoptarlo</button>
                <!--</p>-->
            </div>
            </form>
        </div>


    {{/if}}

    <!-- Single Post End-->

{{/partial}}

