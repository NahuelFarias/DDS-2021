{{#partial "content"}}
    <!-- Datos de registro-->
    <div class="register">
        <div class="container">
            {{#unless usuario}}
            <div class="py-5 text-center">
                <br> <br>
                <h2>¿Encontraste una mascota?</h2>
                <p class="lead">Llená este formulario para que la ayudemos a encontrar a su dueño</p>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <h3 class="lead">¿Ya tenés una cuenta?</h3><a class="btn-grande" type="submit"
                            href="login.html">Ingresá</a>
                    </div>
                    <div class="col-sm-6">
                        <h3 class="lead">¿Querés crearla?</h3><a class="btn-grande" type="submit"
                            href="registro_duenio.html">Registrate</a>
                    </div>
                </div>
            </div>
            {{/unless}}

            <div class="row">
                <div class="col-lg-8">

                    <form class="needs-validation" action="/registro_encontrada" method="post"novalidate>
                        <div class="row g-3">
                            {{#unless usuario}}
                                <h4 class="mb-3 wavyp">Tus datos:</h4>
                                <div class="col-sm-6">
                                    <label for="firstName" class="form-label">Nombre</label>
                                    <input type="text" class="form-control" id="firstName" placeholder="Tu nombre" value=""
                                           name="nombrePersona"
                                           required>
                                    <div class="invalid-feedback">
                                        Ingresá un nombre válido.
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label for="lastName" class="form-label">Apellido</label>
                                    <input type="text" class="form-control" id="lastName" placeholder="Tu apellido" value=""
                                           name="apellido"
                                           required>
                                    <div class="invalid-feedback">
                                        Ingresá un apellido válido.
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <label for="firstName" class="form-label">Fecha de nacimiento</label>
                                    <input type="text" class="form-control" id="firstName" placeholder="dd/mm/aaaa" value=""
                                           name="fnacPersona"
                                           required>
                                    <div class="invalid-feedback">
                                        Ingresá tu fecha de nacimiento.
                                    </div>
                                </div>

                                <div class="col-sm-3 ">
                                    <label for="lastName" class="form-label">Tipo</label>
                                    <select class="form-select" id="state" name="tipoDoc" required>
                                        <option value="">...</option>
                                        {{#each tipos}}
                                            <option value="{{.}}">{{.}}</option>
                                        {{/each}}
                                    </select>
                                    <div class="invalid-feedback">
                                        Seleccioná el tipo de documento.
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <label for="lastName" class="form-label">Nro documento</label>
                                    <input type="text" class="form-control" id="lastName" placeholder="" value="" name="nroDoc"required>
                                    <div class="invalid-feedback">
                                        Ingresá un número de documento válido.
                                    </div>
                                </div>

                                <div class="row py-3">
                                    <div class="col-md-4">
                                        <label for="country" class="form-label">País</label>
                                        <select class="form-select" id="country" name="pais" required>
                                            <option value="">Elegí...</option>
                                            <option value="argentina">Argentina</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Por favor, ingresá un país válido.
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="state" class="form-label">Provincia/Estado</label>
                                        <select class="form-select" id="state" name="provincia" required>
                                            <option value="">Elegí...</option>
                                            {{#each provincias}}
                                                <option value="{{.}}">{{.}}</option>
                                            {{/each}}
                                        </select>
                                        <div class="invalid-feedback">
                                            Por favor, ingresá una provincia.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-7">
                                    <label for="address" class="form-label">Dirección</label>
                                    <input type="text" class="form-control" id="address" placeholder="Av. Siempreviva 742"
                                           name="direccion" required>
                                    <div class="invalid-feedback">
                                        Por favor, ingresá la dirección.
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <label for="zip" class="form-label">Código Postal</label>
                                    <input type="text" class="form-control" id="zip" placeholder="" required>
                                    <div class="invalid-feedback">
                                        El código postal es obligatorio.
                                    </div>
                                </div>

                                <hr class="my-4">

                                <h4 class="mb-3 wavyp">Tus contactos:</h4>

                                <div class="row g-3">

                                    <div class="col-sm-6">
                                        <label for="firstName" class="form-label">Nombre</label>
                                        <input type="text" class="form-control" id="firstName" placeholder="" value=""
                                               name="cNombre" required>
                                        <div class="invalid-feedback">
                                            Ingrese un nombre válido.
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <label for="lastName" class="form-label">Apellido</label>
                                        <input type="text" class="form-control" id="lastName" placeholder="" value=""
                                               name="cApellido" required>
                                        <div class="invalid-feedback">
                                            Ingrese un apellido válido.
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <label for="firstName" class="form-label">Número celular</label>
                                        <input type="text" class="form-control" id="celular" placeholder="+541123456789"
                                               value="" name="cNumero"required>
                                        <div class="invalid-feedback">
                                            Ingrese un número de celular válido.
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <label for="lastName" class="form-label">Correo Electrónico</label>
                                        <input type="text" class="form-control" id="email" placeholder="nombre@correo.com"
                                               value="" name="cCorreo"required>
                                        <div class="invalid-feedback">
                                            Ingrese un correo electrónico válido.
                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <label for="medio" class="form-label">Medio preferido</label>
                                        <select class="form-select" id="state" name="medioPreferido" required>
                                            <option value="">Elegí...</option>
                                            <option value="EMAIL">Email</option>
                                            <option value="WHATSAPP">WhatsApp</option>
                                            <option value="SMS">SMS</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Elegí un medio de comunicación.
                                        </div>
                                    </div>
                                    <div class="col-sm-12 text-right">
                                        <a class="btn-mis" type="submit">+ Agregar</a>
                                    </div>
                                </div>
                                <hr class="my-4">
                            {{/unless}}

                            <!--MASCOTA-->
                            <h4 class="mb-3 wavyp">Sobre la mascota</h4>

                            <div class="col-sm-3">
                                <label for="lastName" class="form-label">Especie</label>
                                <select class="form-select" id="state" name="especie" required>
                                    <option value="">...</option>
                                    <option value="Gato">Gato</option>
                                    <option value="Perro">Perro</option>
                                </select>
                                <div class="invalid-feedback">
                                    Seleccioná una especie.
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <label for="lastName" class="form-label">Sexo</label>
                                <select class="form-select" id="state" name="sexo" required>
                                    <option value="">...</option>
                                    <option value="gato">Hembra</option>
                                    <option value="perro">Macho</option>
                                </select>
                                <div class="invalid-feedback">
                                    Sexo.
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <label for="email" class="form-label">Descripción</label>
                                <input type="text" class="form-control" id="descripcion"
                                    placeholder="Describí en qué estado la encontraste">
                                <div class="invalid-feedback">
                                    Ingresá una descripción.
                                </div>
                            </div>

                            <hr class="my-4">
                            <h4 class="mb-3 wavyp">Fotos</h4>
                            <div class="row g-3">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Subí una o varias fotos</label>
                                        <input type="file" class="form-control-file" id="exampleFormControlFile1" name="foto">
                                    </div>
                                </div>

                                <div class="col-sm-12 text-right">
                                    <a class="btn-mis" type="submit">+ Otra foto</a>
                                </div>

                            </div>
                            <hr class="my-4">

                            <h4 class="mb-3">¿Dónde la encontraste?</h4>
                            <p>Seleccioná la ubicación en el mapa:</p>
                            <div class="row g-3">
                                <div class="map">
                                    <iframe
                                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d51023.18342038872!2d-58.46479977772431!3d-34.64479486565295!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcc966bf151d67%3A0x255fef772508e89c!2sUTN.BA!5e0!3m2!1ses-419!2sar!4v1630306091370!5m2!1ses-419!2sar"
                                        width="600" height="450" style="border:0;" allowfullscreen=""
                                        loading="lazy"></iframe>
                                </div>
                            </div>

                            <hr class="my-4">
                            <h4 class="mb-3 wavyp">Hogar de tránsito</h4>
                            <p>Si no podés darle tránsito hasta que encuentre a su dueño comunicate con un hogar de
                                tránsito.</p>
                                <p>Seleccioná un radio de cercanía</p>
                            <label for="inputEmail3" class="col-sm-2 col-form-label fw-bold">Distancia </label>
                            <div class="col-sm-3">
                                <select class="form-select" id="state" name="km" required>
                                    <option value="">...</option>
                                    <option value="5">Hasta 5km</option>
                                    <option value="10">Hasta 10km</option>
                                    <option value="15">Hasta 15km</option>
                                    <option value="16">Todos</option>
                                </select>
                            </div>

                            <div class="col-sm-12">
                                <label for="email" class="form-label">Info de hogares:</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                    placeholder="Nombre     hogar       Direccion       Telefono"
                                    readonly></textarea>
                            </div>
                    
                            <hr class="my-4">
                            <div class="container">
                                <div class=" text-center form-check">
                                    <input type="checkbox" class="form-check-input" id="save-info">
                                    <label class="form-check-label" for="save-info">Acepto que se envíen mis datos de contacto al dueño.</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button class="btn-grande" type="submit">PUBLICAR MASCOTA ENCONTRADA</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!--------------------------------------------Foto derecha--------------------------------------------->
                <div class="col-lg-3">
                    <div class="col-md-5 col-lg-4 order-md-last">
                        <img class="register-img d-none d-lg-block" src="img/pet-register.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
        <br>
    </div>
    <!-- Datos de registro-->


